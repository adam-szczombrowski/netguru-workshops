.col-md-8
  %h1 Listing categories

  %table.table
    %tr
      %th Name
      %th
      %th
      %th

    - categories.each do |category|
      %tr
        %td= link_to category.name, category, class: 'link'
        %td= link_to 'Show', category, class: 'link'
        %td= link_to 'Edit', edit_category_path(category), class: 'link'
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'link'

  %br

  = link_to 'New Category', new_category_path, class: "btn btn-default"

